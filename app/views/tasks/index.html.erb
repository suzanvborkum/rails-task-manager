<div class="container">

  <h1>Tasks</h1>

  <ul>
    <% @tasks.each do |task| %>
      <li>
        <% if task.completed %>
          <i class="far fa-check-square"></i>
        <% else %>
          <i class="far fa-square"></i>
        <% end %>
        <%= link_to task.title, task_path(task.id) %>
      </li>
    <% end %>
  </ul>

  <%= link_to '+ Add a new task', tasks_new_path %>

</div>

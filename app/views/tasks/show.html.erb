<div class="container">

  <h2><%= @task.title %></h2>
  <p class="details"><%= @task.details %></p>

  <%= link_to "Delete #{@task.title}",
              task_path(@task),
              method: :delete,
              data: { confirm: "Are you sure?" } %>

  <div class="back-to">
  <%= link_to 'Back to list', tasks_path %>
  </div>

</div>
